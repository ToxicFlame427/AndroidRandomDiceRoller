<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:textSize="40dp"
        android:padding="15dp"
        android:gravity="center"
        android:text="Random Dice Roller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/dice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:visibility="visible"
            android:layout_margin="5dp"
            android:id="@+id/dice_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dice_1"/>

        <ImageView
            android:visibility="invisible"
            android:layout_margin="5dp"
            android:id="@+id/dice_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dice_2"/>

        <ImageView
            android:visibility="invisible"
            android:layout_margin="5dp"
            android:id="@+id/dice_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dice_3"/>

        <ImageView
            android:visibility="invisible"
            android:layout_margin="5dp"
            android:id="@+id/dice_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dice_4"/>

        <ImageView
            android:visibility="invisible"
            android:layout_margin="5dp"
            android:id="@+id/dice_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dice_5"/>

        <ImageView
            android:visibility="invisible"
            android:layout_margin="5dp"
            android:id="@+id/dice_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dice_6"/>

    </LinearLayout>

    <TextView
        android:textSize="25sp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter amount of dice to roll"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/dice_roll_number"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of dice to roll"
            android:inputType="number"/>

    </LinearLayout>

    <Button
        android:id="@+id/roll_button"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Roll The Dice"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_width="match_parent"/>

</LinearLayout>